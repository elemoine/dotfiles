[color]
    status = auto
    diff = auto
[merge]
	tool = vimdiff
[alias]
    c = commit
    cm = commit --message
    a = add
    s = status
    r = reset
    rh = reset --hard
    f = fetch
    m = merge
    r = rebase
    d = diff
    p = push
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    co = checkout
    pr = pull-request
[push]
	default = tracking
