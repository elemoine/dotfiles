[core]
    excludesfile = "~/.gitignore_"
[user]
    name = Ã‰ric Lemoine
    email = eric.lemoine@gmail.com
[init]
    # does not work with git 1.7.0.4
    templatedir = ~/.git_template
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
[merge]
	tool = vimdiff
[alias]
    c = commit
    ca = commit --amend
    cm = commit --message
    cf = commit --fixup
    a = add
    s = status
    rh = reset --hard
    f = fetch
    m = merge
    mf = merge --ff-only
    r = rebase
    ri = rebase --interactive
    rs = rebase --interactive --autosquash
    d = diff
    p = push
    pf = push --force
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    co = checkout
    pr = pull-request
    ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
[push]
	default = tracking
