# some nice aliases
alias l='ls --color -l'
alias a='l -a'
alias dvipsa4='dvips -t a4'

# alias to connect to ens
alias sens='ssh -l elemoine ssh.ens-lyon.fr'

# aliases to mount/umount devices
alias mntcd='mount /cdrom && cd /cdrom'
alias umntcd='cd && umount /cdrom'
alias mntcw='mount /cdwriter && cd /cdwriter'
alias umntcw='cd && umount /cdwriter'
alias mntf='_mntf && cd /cflash' # _mntf is defined in .zsh/rc/func
alias umntf='cd && umount /cflash'
alias mntk='mount /usbk && cd /usbk'
alias umntk='cd && umount /usbk'

# alias to fetchmail
alias fetchmail-all='/usr/bin/fetchmail --mda "/usr/bin/procmail -d %T"'
alias fetchmail-sun='/usr/bin/fetchmail -f ~/.fetchmailrc-sun --mda "/usr/bin/procmail -d %T"'

# alias to fetchmail in deamon mode 
alias fetchmaild-all='/usr/bin/fetchmail -d 300 --mda "/usr/bin/procmail -d %T"'
alias fetchmaild-sun='/usr/bin/fetchmail -f ~/.fetchmailrc-sun -d 300 --mda "/usr/bin/procmail -d %T"'

# alias to put netif on/off
alias ifup-eth0-sun='sudo ifup eth0=eth-dhcp && backup_to_sun'
alias ifup-eth1-sun='sudo ifup eth1=wifi-sun'
alias ifup-eth0-ens='sudo ifup eth0=eth-dhcp && backup_to_ens'
alias ifup-eth1-ens='sudo ifup eth1=wifi-ens'
alias ifup-eth0-hom='sudo ifup eth0=eth-dhcp'
alias ifup-eth1-hom='sudo ifup eth1=wifi-home'
alias ifdown-eth0='sudo ifdown eth0'
alias ifdown-eth1='sudo ifdown eth1'

# remind
alias remind='remind "-kxmessage %s " ${HOME}/.remind'

# screen
alias sS='screen -S'
alias sls='screen -ls'
alias sdr='screen -dr'

alias pc22='ssh camptocamp@c2cpc22.camptocamp.com'
alias hbs='ssh TI\\elemoine@195.68.124.82'
alias aravis='ssh -A elemoine@aravis.wrk.cby'
