autoload -U colors
colors

user_color="red"
host_color="green"
path_color="blue"
date_color="red"

date_format="%H:%M"

user="%{$fg[$user_color]%}[%n]"
host="%{$fg[$host_color]%}[%m]"
cpath="%{$fg[$path_color]%}[%/]%b"
end="%{$reset_color%}"
date="%{$fg[$date_color]%}%D{$date_format}"

# previous stuff
#cpath="%B%{$fg[$path_color]%}[%/]%b"

PS1="$user$host$cpath$end$"
RPS1="$date$end"
