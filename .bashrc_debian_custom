export LANG=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8

export PATH=/opt/jdk1.7.0_10/bin:${PATH}
export PATH=${HOME}/scripts:${PATH}
export PATH=${HOME}/.gem/ruby/1.8/bin:${PATH}

export CDPATH=.:${HOME}/src

export LESS="-RXF"

alias l='ls --color -l'
alias skb='setxkbmap -model pc105 -layout "fr,fr" -variant "bepo,oss" -option "grp:shifts_toggle,grp_led:scroll"'
alias screenshot='gnome-screenshot --area'
alias audio='unity-control-center sound'
alias sd='sudo shutdown -h now'
alias lo='LIBGL_ALWAYS_SOFTWARE=1 libreoffice'

xset b off

#
# Create symlink ~/.ssh/ssh_auth_sock to the ssh-agent socket. This is
# used for tmux sessions.
#
# See these links for more information:
#
# https://gist.github.com/bcomnes/e756624dc1d126ba2eb6
# http://techblog.appnexus.com/2011/managing-ssh-sockets-in-gnu-screen/
# https://gist.github.com/martijnvermaat/8070533
# http://stackoverflow.com/questions/21378569/how-to-auto-update-ssh-agent-environment-variables-when-attaching-to-existing-tm
#
if [[ -S $SSH_AUTH_SOCK && ! -h $SSH_AUTH_SOCK ]]; then
    ln -sf $SSH_AUTH_SOCK ~/.ssh/ssh_auth_sock
fi

# fzf
# https://github.com/junegunn/fzf
[ -f ~/.fzf.bash ] && source ~/.fzf.bash
export FZF_DEFAULT_COMMAND='ag --nocolor -g ""'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_DEFAULT_OPTS='
--color fg:242,bg:236,hl:65,fg+:15,bg+:239,hl+:108
--color info:108,prompt:109,spinner:108,pointer:168,marker:168
'

# Function to search por passwords in my password store
function spass {
    pushd ${HOME}/.password-store
    password=$(find . -name '*.gpg' | fzf)
    popd
    password=${password%.*}
    pass show -c $password
}
