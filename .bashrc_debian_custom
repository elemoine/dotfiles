export LANG=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8

export PATH=/opt/jdk1.7.0_10/bin:${PATH}
export PATH=${HOME}/scripts:${PATH}
export PATH=${HOME}/.gem/ruby/1.8/bin:${PATH}

export LESS="-RXF"

alias l='ls --color -l'
alias skb='setxkbmap -model pc105 -layout "fr,fr" -variant "bepo,oss" -option "grp:shifts_toggle,grp_led:scroll"'
alias screenshot='gnome-screenshot --area'
alias setdp='sudo xrandr --output DP1 --primary --right-of eDP1'
alias unsetdp='sudo xrandr --output DP1 --off'
